

@model IEnumerable<TEMPLATE.Models.recoltModel>
@{
    ViewBag.Title = "IndexAssociation";
    Layout = "~/Views/Layouts/_DefaultStation.cshtml";
}

<div class="main-panel">
 <div class="container">

    <div class="panel-header bg-primary-gradient">
       <div class="page-inner py-3">
          <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
             <div>
              <h2 class="text-white pb-2 fw-bold">
                @Session["association"]
            </h2>
        </div>      
        <div class="ml-md-auto py-2 py-md-0">
         <!-- PAGE-HEADER -->
         <div class="page-header">
            <ol class="breadcrumb">
               <li class="breadcrumb-item">
                  <a href="#">@Session["associat"]</a>
              </li>
              <li class="breadcrumb-item">
                <a href="#">Recolte</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              Liste 
          </li>
      </ol>
  </div>
  <!-- PAGE-HEADER END -->
</div>
</div>
</div>
</div>
<div class="card-body rec-pat" >
  <div class="container-fluid">
      @if (Session["IDEmploye"] != null)
      { 
      <a href="@Url.Action("create","recolteStation")" class=" btn btn-sm  btn-success pull-right  " style="margin-top:5px; margin-bottom:5px"><i class="fa fa-plus mr-2"></i>Ajouter</a>
    <div class="table-responsive">
        <table class="table table-striped  table-bordered  " id="mytable1"  style="width:100%">
           <thead>
               <tr style="background-color:darkturquoise">
                    <th>NO</th>
                    <th>NOM</th>
                    <th>PRENOM</th>
                    <th>QUANTITE</th>
                    <th>QUALITE</th>
                     <th>PRIX</th>
                    <th>OPTIONS</th>
              </tr>
           </thead>
            <tbody>
                @{ int NO = 0;}
                @foreach (var item in Model) 
                {
                   NO = NO + 1;
                   <tr>
                <td>
                    @NO 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NOM_client)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRENOM_client)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.quantite)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.NOM_qualite)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Prix)
                </td>
                <td>
                     @Html.ActionLink("Detail", "Details", new { idclient = item.ID_client,idqualite=item.ID_qualite,idstation=item.ID_station }, new { @class = "btn btn-sm btn-info " })
                </td>
            </tr>
                }
            </tbody>
        </table>
    </div>
      }
     else
      { 
      
    <div class="table-responsive">
        <table class="table table-striped  table-bordered  " id="mytable1"  style="width:100%">
           <thead>
               <tr style="background-color:darkturquoise">
                    <th>NO</th>
                    <th>NOM</th>
                    <th>PRENOM</th>
                    <th>QUANTITE</th>
                    <th>QUALITE</th>
                    <th>PRIX</th>
                   <th>STATION</th>
                   <th>OPTIONS</th>
              </tr>
           </thead>
            <tbody>
                @{ int NO = 0;}
                @foreach (var item in Model) 
                {
                   NO = NO + 1;
                   <tr>
                <td>
                    @NO 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NOM_client)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRENOM_client)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.quantite)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.NOM_qualite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prix)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NOM_station)
                </td>
                <td>
                     @Html.ActionLink("Detail", "Details", new { idclient = item.ID_client,idqualite=item.ID_qualite,idstation=item.ID_station }, new { @class = "btn btn-sm btn-info " })
                </td>
            </tr>
                }
            </tbody>
        </table>
    </div>
      }
  </div>
 </div>
</div>
 @section scripts
 {
    <script src="~/Scripts/tableau.js"></script>
    <script src="~/Scripts/tableau1.js"></script>
 }