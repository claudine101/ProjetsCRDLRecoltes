
@model IEnumerable<TEMPLATE.Models.recoltModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<div class="main-panel">
 <div class="container">

    <div class="panel-header bg-primary-gradient">
       <div class="page-inner py-3">
          <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
             <div>
              <h2 class="text-white pb-2 fw-bold">
                Les recolte @ViewBag.mot dans un association @ViewBag.ass
            </h2>
        </div>
        <div class="ml-md-auto py-2 py-md-0">
         <!-- PAGE-HEADER -->
         <div class="page-header">
            <ol class="breadcrumb">
               <li class="breadcrumb-item">
                  <a href="#"> @ViewBag.ass</a>
              </li>
              <li class="breadcrumb-item">
                <a href="#">Recolte</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              Liste 
          </li>
      </ol>
  </div>
  <!-- PAGE-HEADER END -->
</div>
</div>
</div>
</div>
<div class="card-body rec-pat" >
  <div class="container-fluid">
              <div class="container-fluid " >  
             <a href="@Url.Action("RapportQuantite","association")" class=" btn btn-sm  btn-warning pull-left  " style="margin-top:5px; margin-bottom:5px"><i class="fa fa-plus mr-2"></i>Retour</a>
          
      <a href="@Url.Action("create","recolte")" class=" btn btn-sm  btn-success pull-right  " style="margin-top:5px; margin-bottom:5px"><i class="fa fa-plus mr-2"></i>Ajouter</a>
    <div class="table-responsive">
              <p>
        
   @using (Html.BeginForm("Details", "Association", FormMethod.Post))
   {
    <div class="row">
        <article  class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
            <h2 style="color:blue">Date de début</h2>
            <input type="datetime-local" name="startDate"  id="startDate" class="form-control total" />
            </article>
                           
        <article  class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
            <h2 style="color:blue">Date de fin</h2>
            <input type="datetime-local" name="endDate" id="endDate"  class="form-control total" /></article>
        <article  class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
            <h2 style="color:blue">Voir</h2>
                <input type="submit" name="submit" id="btnCreatePieChart" value="Voir"  class="btn btn-info"/>  
        </article>
    </div> 
 }  
</p>
        <table class="table table-striped  table-bordered  " id="mytable"  style="width:100%">
           <thead>
               <tr style="background-color:darkturquoise">
                    <th>NO</th>
                    <th>NOM</th>
                    <th>PRENOM</th>
                    <th>QUANTITE</th>
                    <th>QUALITE</th>
                    <th>PRIX</th>
                    <th>STATION</th>
                    <th>DATE</th>

              </tr>
           </thead>
            <tbody>
                @{ int NO = 0;}
                @foreach (var item in Model) 
                {
                   NO = NO + 1;
                   <tr>
                <td>
                    @NO 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NOM_client)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRENOM_client)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.quantite)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.NOM_qualite)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Prix)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NOM_station)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_insertion)
                </td>
               
            </tr>
                }
            </tbody>
        </table>
    </div>
  </div>
 </div>
</div>
</div>
