@model IEnumerable<TEMPLATE.Models.recoltModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<div class="main-panel">
 <div class="container">
    <div class="panel-header bg-primary-gradient">
       <div class="page-inner py-3">
          <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
             <div>
              <h2 class="text-white pb-2 fw-bold">
                Rapport
            </h2>
        </div>
        <div class="ml-md-auto py-2 py-md-0">
         <!-- PAGE-HEADER -->
         <div class="page-header">
            <ol class="breadcrumb">
               <li class="breadcrumb-item">
                  <a href="#">Association</a>
              </li>
              <li class="breadcrumb-item">
                <a href="#">Rapport</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page" >
              Quantite 
          </li>
      </ol>
  </div>
  <!-- PAGE-HEADER END -->
</div>
</div>
</div>
</div>
<div class="card-body rec-pat" >
    
    
  <div class="container-fluid">
      <div class="row">
    <div class="col-md-12" id="containerAssociationQuantite"></div>
   
    
    
</div>
       
       <p>
        
   @using (Html.BeginForm("RapportQuantite", "Association", FormMethod.Post))
   {
    <div class="row">
        <article  class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
            <h2 style="color:blue">Date de début</h2>
            <input type="datetime-local" name="startDate"  id="startDate" class="form-control total" />
            </article>
                           
        <article  class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
            <h2 style="color:blue">Date de fin</h2>
            <input type="datetime-local" name="endDate" id="endDate"  class="form-control total" /></article>
        <article  class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
            <h2 style="color:blue">Voir</h2>
                <input type="submit" name="submit" id="btnCreatePieChart" value="Voir"  class="btn btn-info"/>  
        </article>
    </div> 
 }  
</p>
      <div style="color:blue"><h1> @ViewBag.mot</h1></div>
       <div class="table-responsive">
           
        <table class="table table-striped  table-bordered  " id="mytable1"  style="width:100%">
           <thead>
               <tr style="background-color:darkturquoise">
                    <th>NO</th>
                    <th>NOM</th>
                    <th>QUANTITE</th>
                   <th>OPTIONS</th>
              </tr>
           </thead>
            <tbody>
                @{ int NO = 0;}
                @foreach (var item in Model) 
                {
                   NO = NO + 1;
                   <tr>
                <td>
                    @NO 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.count)
                </td>
                <td>
                     @Html.ActionLink("Detail", "Details", new { id = item.ID }, new { @class = "btn btn-sm btn-info" })
                </td>
                   
            </tr>
        }
            </tbody>
        </table></div>
   </div>
</div>
 </div>
@section scripts
{
    <script src="~/Scripts/chartAssociationQuantit.js"></script>
   
    <script src="~/Scripts/tableau1.js"></script>
}



