
@model TEMPLATE.Models.association
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<div class="main-panel">
    <div class="container">
    <div class="panel-header bg-primary-gradient">
	    <div class="page-inner py-5">
		    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
			    <div>
				    <h2 class="text-white pb-2 fw-bold">Association</h2>
			    </div>
			    <div class="ml-md-auto py-2 py-md-0">
			    <!-- PAGE-HEADER -->
			    <div class="page-header">
				    <ol class="breadcrumb">
					    <li class="breadcrumb-item">
						    <a href="#">Association</a>
					    </li>
					    <li class="breadcrumb-item active" aria-current="page">
						    Ajouter
					    </li>
				    </ol>
			    </div>
                <!-- PAGE-HEADER END -->
			    </div>
		    </div>
	    </div>
    </div>
    <div class="container-fluid" style="background-color:moccasin">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-3 col-lg-3">     
            </article>
            <article class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="background-color:#D291BC;margin-top:4px;margin-bottom:4px">
               
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

   
       <div class="bg-light border  margin-top">
                    <div class="form-horizontal  "   >
                        <h4 style="text-align:center ;color:blue"></h4>
                        <hr />
        
                        <div class="editor-field">
                            @Html.HiddenFor(model => model.ID_association)
                            @Html.ValidationMessageFor(model => model.ID_association)
                        </div>
                        <div class="form-group">
                            @Html.HiddenFor(model => model.ID_colline)
                            @Html.ValidationMessageFor(model => model.ID_colline)
                        </div> 
                        <div class="form-group">
                            <div class="col-md-12"  >
                                <label><b style="font-size:20px">Nom:</b></label>
                                @Html.TextBoxFor(model => model.NOM_association, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NOM_association)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12"  >
                                <label><b style="font-size:20px">Tel:</b></label>
                                @Html.TextBoxFor(model => model.TEL_association, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TEL_association)
                            </div>
                        </div>
                     
                        <div class="form-group">
                            <div class="col-md-12"  >
                                <label>Date de creation</label>
                                    @Html.TextBoxFor(model => model.DATE_association, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DATE_association)
                            </div>
                        </div>
                     
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-10">
                                <input type="submit" value="Create" class="btn btn-success pull-right" />
                            </div>
                        </div>
                        
                    </div>
                   
                    <div>
                        @Html.ActionLink("Retour", "Index")
                    </div>
           </div>
}      
</article>
            <article class="col-xs-12 col-sm-12 col-md-3 col-lg-3">    
            </article>
        </div>
</div>
    </div>
