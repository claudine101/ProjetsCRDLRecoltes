 <div class="container-fluid">
     @{ int NO=0;}
     @using (Html.BeginForm("Index", "Client", FormMethod.Post))
                   {
                      <div class="row">
                            <article  class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                                <h2 style="color:blue">Association</h2>
                                @Html.DropDownList("ID_associationClients", null, "Choisir l'association", htmlAttributes: new { @class = "form-control " })      
                            </article>
                            <article  class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                                <h2 style="color:blue">Provinces</h2>
                                @Html.DropDownList("ID_provinceActifs1", null, "Choisir la province", htmlAttributes: new { @class = "form-control " })      
                            
                            </article>
                            <article  class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
