                      </div>  
                   }
  
      <a href="@Url.Action("Index","client")" class=" btn btn-sm  btn-outline-info pull-left  " style="margin-top:5px; margin-bottom:5px"><i class="fa fa-arrow-left mr-2"></i>Retour</a>
    
     <a href="@Url.Action("create","client")" class=" btn btn-sm  btn-info pull-right  " style="margin-top:5px; margin-bottom:5px"><i class="fa fa-plus mr-2"></i>Ajouter</a>
    <div class="table-responsive">
     <table class="table table-striped  table-bordered  " id="mytable1"  style="width:100%">
     <thead>
        <tr style="background-color:#016ce9;color:white">
        <td>NO</td>
        <th>CNI</th>
        <th>NOM</th>
        <th>PRENOM</th>
        <th>TEL</th>
        <th>ASSOCIATION</th>
        <th>COLLINE</th>
        <th>ZONE</th>
        <th>COMMUNE</th>
        <th>PROVINCE</th>
        <th>DATE D'INSERTION</th>
        <th>OPTIONS</th>
    </tr>
</thead>
        <tbody>
@foreach (var item in Model) {
    NO++;
     <tr>
        <td>
            @NO
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CNI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NOM_client)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRENOM_client)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.assocition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.colline)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.zone)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.commune)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.province)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
             <div class="dropdown">
                <span class="dropdown-toggle dropdown-bg btn btn-outline-primary" role="button" id="dropdownMenuButton5"
                        data-toggle="dropdown" aria-expanded="false">
                    Actions
                </span>
                <div class="dropdown-menu dropdown-menu-right shadow-none" aria-labelledby="dropdownMenuButton5">
                    @Html.ActionLink("Modifier", "Edit", new { id = item.ID }, new { @class = "btn btn-sm btn-info " })
                    @Html.ActionLink("Supprime", "Delete", new { id = item.ID}, new { @class = "btn btn-sm btn-danger" })
                </div>
            </div>
        </td>
    </tr>
}
</tbody>
</table>
