@model TEMPLATE.Models.client
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<div class="main-panel">
    <div class="container">
    <div class="panel-header bg-primary-gradient">
	    <div class="page-inner py-5">
		    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
			    <div>
				    <h2 class="text-white pb-2 fw-bold">Clients</h2>
			    </div>
			    <div class="ml-md-auto py-2 py-md-0">
			    <!-- PAGE-HEADER -->
			    <div class="page-header">
				    <ol class="breadcrumb">
					    <li class="breadcrumb-item">
						    ENREGISTREMENT DES RECOLTES DANS @Session["association"]
					    </li>
					    <li class="breadcrumb-item active" aria-current="page">
						    Ajouter
					    </li>
				    </ol>
			    </div>
                <!-- PAGE-HEADER END -->
			    </div>
		    </div>
	    </div>
    </div>
    <div class="container-fluid" style="background-color:moccasin">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-3 col-lg-3">     
            </article>
            <article class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="background-color:#D291BC;margin-top:4px;margin-bottom:4px">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="bg-light border  margin-top">
                    <div class="form-horizontal  "   >
                        <h4 style="text-align:center ;color:blue">Ajouter une nouveau client</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-12"  >
                                <label>CNI</label>
                                @Html.TextBoxFor(model => model.CNI, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CNI)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12"  >
                                <label>NOM</label>
                                @Html.TextBoxFor(model => model.NOM_client, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NOM_client)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12"  >
                                <label>PRENOM</label>
                                @Html.TextBoxFor(model => model.PRENOM_client, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PRENOM_client)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12"  >
                                <label>TEL</label>
                                @Html.TextBoxFor(model => model.TEL_client, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TEL_client)
                            </div>
                        </div>
                         <div class="form-group">
                            <div class="col-md-12">
                            <label> Provinces :</label>
                            @Html.DropDownList("ID_province", null, "Choisir la province", htmlAttributes: new { @class = "form-control " })
                            </div>
                        </div>
                        <div class="form-group">
                        
                            <div class="col-md-12">
                                <label> Commune :</label>
                            @Html.DropDownList("ID_commune", new SelectList(new List<string>()), "Choisir le commune", htmlAttributes: new { @class = "form-control" })
                            </div>
                            </div>
                        <div class="form-group">
                        
                            <div class="col-md-12">
                                <label> zone:</label>
                            @Html.DropDownList("ID_zone", new SelectList(new List<string>()), "Choisir la zone", htmlAttributes: new { @class = "form-control" })
                            </div>
                            </div>
                        <div class="form-group">
                        
                            <div class="col-md-12">
                            <label> colline:</label>
                            @Html.DropDownList("ID_colline", new SelectList(new List<string>()), "Choisir colline", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ID_colline, "", new { @class = "text-danger" })
                            </div>
                        </div> 
                        <div class="form-group">
                            <div class="col-md-12">
                            <label> Provinces :</label>
                            @Html.DropDownList("ID_association", null, "Choisir l'association", htmlAttributes: new { @class = "form-control " })
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-12"  >
                                <label>Date de creation</label>
                                    @Html.TextBoxFor(model => model.DATE_insertion, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DATE_insertion)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-10">
                                <input type="submit" value="Create" class="btn btn-success pull-right" />
                            </div>
                        </div>
                    </div>
                    </div>
                    <div>
                        @Html.ActionLink("Retour", "Index")
                    </div>
                }
            </article>
            <article class="col-xs-12 col-sm-12 col-md-3 col-lg-3">    
            </article>
        </div>
      </div>
    </div>






































