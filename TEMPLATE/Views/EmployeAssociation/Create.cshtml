@model TEMPLATE.Models.employe_association
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<div class="main-panel">
    <div class="container">
    <div class="panel-header bg-primary-gradient">
	    <div class="page-inner py-5">
		    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
			    <div>
				    <h2 class="text-white pb-2 fw-bold">Les employe des associations</h2>
			    </div>
			    <div class="ml-md-auto py-2 py-md-0">
			    <!-- PAGE-HEADER -->
			    <div class="page-header">
				    <ol class="breadcrumb">
					    <li class="breadcrumb-item">
						    <a href="#">Les employe des associations</a>
					    </li>
					    <li class="breadcrumb-item active" aria-current="page">
						    Ajouter
					    </li>
				    </ol>
			    </div>
                <!-- PAGE-HEADER END -->
			    </div>
		    </div>
	    </div>
    </div>
    <div class="container-fluid" >
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-3 col-lg-3">     
                <a href="@Url.Action("Index","EmployeAssociation")" class=" btn btn-sm  btn-outline-info pull-left  " style="margin-top:5px; margin-bottom:5px"><i class="fa fa-arrow-left mr-2"></i>Retour</a>
            
            </article>
            <article class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="background-color:#016ce9;margin-top:4px;margin-bottom:4px">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="bg-light border  margin-top">
                    <div class="form-horizontal  "   >
                        <h4 style="text-align:center ;background-color:#016ce9;color:white">AJAUTER UN EMPLOYE</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        
                        <div class="form-group">
                            <div class="col-md-12">
                            <label> <b style="font-size:20px">Association :</label>
                            @Html.DropDownList("ID_association", null, "Choisir un association", htmlAttributes: new { @class = "form-control " })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <label><b style="font-size:20px">CNI :</label>
                                @Html.TextBoxFor(model => model.CNI, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CNI)
                            </div>
                         </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <label><b style="font-size:20px">NOM :</label>
                                @Html.TextBoxFor(model => model.NOM_employe, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NOM_employe)
                            </div>
                         </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <label> <b style="font-size:20px">PRENOM :</label>
                                @Html.TextBoxFor(model => model.PRENOM_employe, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PRENOM_employe)
                            </div>
                         </div>
                         <div class="form-group">
                            <div class="col-md-12">
                                <label> <b style="font-size:20px">TEL :</label>
                                @Html.TextBoxFor(model => model.TEL_employe, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TEL_employe)
                            </div>
                         </div>
                         <div class="form-group">
                            <div class="col-md-12">
                                <label><b style="font-size:20px"> EMAIL :</label>
                                @Html.TextBoxFor(model => model.EMAIL_employe, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.EMAIL_employe)
                            </div>
                         </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <label> <b style="font-size:20px">Etat :</label>
                                @Html.TextBoxFor(model => model.Statut, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Statut)
                            </div>
                         </div>
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-10">
                                <input type="submit" value="Enregistrer" class="btn btn-info pull-right" />
                            </div>
                        </div>
                    </div>
                    </div>

                }
            </article>
            <article class="col-xs-12 col-sm-12 col-md-3 col-lg-3">    
            </article>
        </div>
</div>
    </div>









