@model IEnumerable<TEMPLATE.Models.recoltModel>
@{
    ViewBag.Title = "IndexAssociation";
    Layout = "~/Views/Layouts/_DefaultAssociation.cshtml";
}

<div class="main-panel">
 <div class="container">

    <div class="panel-header bg-primary-gradient">
       <div class="page-inner py-3">
          <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
             <div>
              <h2 class="text-white pb-2 fw-bold">
                Recolte
            </h2>
        </div>
        <div class="ml-md-auto py-2 py-md-0">
         <!-- PAGE-HEADER -->
         <div class="page-header">
            <ol class="breadcrumb">
               <li class="breadcrumb-item">
                  <a href="#">Home</a>
              </li>
              <li class="breadcrumb-item">
                <a href="#">Recolte</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              Liste 
          </li>
      </ol>
  </div>
  <!-- PAGE-HEADER END -->
</div>
</div>
</div>
</div>
<div class="card-body rec-pat "style="background-color:moccasin"">
   
    @ViewBag.IDstation
  <div class="container-fluid">
      <a href="@Url.Action("create","recolte")" class=" btn btn-sm  btn-success pull-right  " style="margin-top:5px; margin-bottom:5px"><i class="fa fa-plus mr-2"></i>Ajouter</a>
    <table class="table table-bordered table-stripped table-hover table-condensed">
     @if(@ViewBag.IDassocition!=0)
     {
        <tr style="background-color:darkturquoise">
            <th>NO</th>
            <th>NOM</th>
            <th>PRENOM</th>
            <th>QUANTITE</th>
            <th>QUALITE</th>
             <th>PRIX</th>
            <th>STATION</th>
            <th>DATE</th>
            <th>OPTIONS</th>
       </tr>
      int NO = 0;
      foreach (TEMPLATE.Models.recoltModel item in Model)
      {
         NO = NO + 1;
         <tr>
        <td>
            @NO 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NOM_client)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRENOM_client)
        </td>
           <td>
            @Html.DisplayFor(modelItem => item.quantite)
        </td>
           <td>
            @Html.DisplayFor(modelItem => item.NOM_qualite)
        </td>
           <td>
            @Html.DisplayFor(modelItem => item.Prix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NOM_station)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date_insertion)
        </td>

        <td>
           <div class="dropdown">
                <span class="dropdown-toggle dropdown-bg btn btn-outline-primary" role="button" id="dropdownMenuButton5"
                        data-toggle="dropdown" aria-expanded="false">
                    Actions
                </span>
                <div class="dropdown-menu dropdown-menu-right shadow-none" aria-labelledby="dropdownMenuButton5">
                    @Html.ActionLink("Modifier", "Edit", new { id = item.ID_recolte }, new { @class = "btn btn-sm btn-success " })
                    @Html.ActionLink("Supprime", "Delete", new { id = item.ID_recolte }, new { @class = "btn btn-sm btn-danger" })
                </div>
            </div>
        </td>
    </tr>
      }
     }
     else
     {
         <tr style="background-color:darkturquoise">
            <th>NO</th>
            <th>NOM</th>
            <th>PRENOM</th>
            <th>QUANTITE</th>
            <th>QUALITE</th>
            <th>PRIX</th>
            <th>ASSOCIATION</th>
            <th>DATE</th>
            <th>OPTIONS</th>
       </tr>
      int NO = 0;
      foreach (TEMPLATE.Models.recoltModel item in Model)
      {
         NO = NO + 1;
         <tr>
        <td>
            @NO 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NOM_client)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRENOM_client)
        </td>
           <td>
            @Html.DisplayFor(modelItem => item.quantite)
        </td>
           <td>
            @Html.DisplayFor(modelItem => item.NOM_qualite)
        </td>
           <td>
            @Html.DisplayFor(modelItem => item.Prix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NOM_station)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date_insertion)
        </td>

        <td>
           <div class="dropdown">
                <span class="dropdown-toggle dropdown-bg btn btn-outline-primary" role="button" id="dropdownMenuButton5"
                        data-toggle="dropdown" aria-expanded="false">
                    Actions
                </span>
                <div class="dropdown-menu dropdown-menu-right shadow-none" aria-labelledby="dropdownMenuButton5">
                    @Html.ActionLink("Modifier", "Edit", new { id = item.ID_recolte }, new { @class = "btn btn-sm btn-success " })
                    @Html.ActionLink("Supprime", "Delete", new { id = item.ID_recolte }, new { @class = "btn btn-sm btn-danger" })
                </div>
            </div>
        </td>
    </tr>
      }
     }
    </table>
  </div>
 </div>
</div>
