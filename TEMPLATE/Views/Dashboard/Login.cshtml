@model TEMPLATE.Models.utilisateur

@{
    Layout = null;
}

<!DOCTYPE html>

<html>



    <body style="background-image:url(assets/img/cafe2.jpg) " >
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    @Scripts.Render("~/Frontend/js")
  @Styles.Render("~/Frontend/css")
  
  
    <section class="ftco-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6 col-lg-4">
            <div class="login-wrap py-5">
              <p class="text-center" style="margin-top:-25px;font-size: 18px;">Bienvenue </p>
              <img src="~/Assets/img/pht2.png" alt="navbar brand" width="300" height="100"  class="navbar-brand"  style="border-radius:0PX">
               
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
   
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.username, new {@class="form-control",placeholder="Enter your username",autofocus=""})
                            @Html.ValidationMessageFor(model => model.username,"",new {@class="error-text"})
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.passwords, new {@class="form-control",placeholder="Enter your password"})
                            @Html.ValidationMessageFor(model=>model.passwords)
                        </div>
                        <div class="form-group d-md-flex">
                  <div class="w-100 text-md-right">
                    <a href="#">Mot de passe oublié ?</a>
                  </div>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn form-control btn-primary rounded submit px-3">Se connecter</button>
                </div>
                }
                
            </div>
          </div>
        </div>
      </div>
    </section>


  </body>
  </html>




